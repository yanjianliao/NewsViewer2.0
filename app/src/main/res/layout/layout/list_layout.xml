<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageOfList"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/images"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                tools:text="Student Walkouts Across the US: 'We Deserve to Live Without Fear' "
                android:textSize="20dp"
                android:id="@+id/articleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/publishDate"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:text="\n2018-02-23T21:59:00Z"/>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/likeCountImageList"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/background_light"
                        android:src="@drawable/ic_favorite_border_black_24dp" />

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/likeCountTextList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="save" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/shareCountImageList"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/background_light"
                        android:src="@drawable/ic_share_black_24dp" />

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/shareCountTextList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="share" />


                </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>